	},
	"description": "Dates and stuff.",
	"devDependencies": {
		"@biomejs/biome": "^1.9.2",
		"@happy-dom/global-registrator": "^15.7.4",
		"@types/bun": "^1.1.10",
		"bun": "^1.1.29",
		"dts-bundle-generator": "^9.5.1",
		"type-fest": "^4.26.1",
		"typescript": "^5.6.2"
	},
	"exports": {
		".": {
			"bun": "./src/index.ts",
			"import": {
				"types": "./types/index.d.ts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./types/index.d.cts",
				"default": "./dist/index.js"
			}
		},
		"./add": {
			"bun": "./src/add.ts",
			"import": {
				"types": "./types/add.d.ts",
				"default": "./dist/add.mjs"
			},
			"require": {
				"types": "./types/add.d.cts",
				"default": "./dist/add.js"
			}
		},
		"./constants": {
			"bun": "./src/constants.ts",
			"import": {
				"types": "./types/constants.d.ts",
				"default": "./dist/constants.mjs"
			},
			"require": {
				"types": "./types/constants.d.cts",
				"default": "./dist/constants.js"
			}
		},
		"./is": {
			"bun": "./src/is.ts",
			"import": {
				"types": "./types/is.d.ts",
				"default": "./dist/is.mjs"
			},
			"require": {
				"types": "./types/is.d.cts",
				"default": "./dist/is.js"
			}
		},
		"./relative": {
			"bun": "./src/relative.ts",
			"import": {
				"types": "./types/relative.d.ts",
				"default": "./dist/relative.mjs"
			},
			"require": {
				"types": "./types/relative.d.cts",
				"default": "./dist/relative.js"
			}
		},
		"./sub": {
			"bun": "./src/sub.ts",
			"import": {
				"types": "./types/sub.d.ts",
				"default": "./dist/sub.mjs"
			},
			"require": {
				"types": "./types/sub.d.cts",
				"default": "./dist/sub.js"
			}
		},
		"./value": {
			"bun": "./src/value.ts",
			"import": {
				"types": "./types/value.d.ts",
				"default": "./dist/value.mjs"
			},
			"require": {
				"types": "./types/value.d.cts",
				"default": "./dist/value.js"
			}
		}
	},
	"files": ["dist", "src", "types"],
	"keywords": ["date", "time", "utility"],
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"name": "@oscarpalmer/datum",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/datum.git"
	},
	"scripts": {
		"build": "bun run clean && bun run compile",
		"clean": "rm -rf ./dist && rm -rf ./types && rm -f ./tsconfig.tsbuildinfo",
		"compile": "bunx bun ./.bun.ts && bunx bun ./.bun.ts --esm",
		"test": "bun test",
		"types:esm": "bunx tsc -p ./tsconfig.json",
		"watch": "bun build ./src/index.ts --outfile ./dist/index.js --watch"
	},
	"type": "module",
	"types": "types/index.d.cts",
	"version": "0.4.0"
}
